// Write a function isEven() which takes a single numeric argument and returns true if the number is even and false otherwise
function isEven(num) {
  return num % 2 ===0
  return true;
  
  }
  
 isEven(4);//true
 isEven(21);//false
 isEven(68);//true
 isEven(333);//false

 // Another example for isEven();
 
 function isEven(num){
 	//return true if even
 	if (num % 2 ===0) {
 		return true;
 	}
 	//return false otherwise
 	else{
 		return false;
 	}
 }
function isEven(num){
	return num % 2 === 0;
}

